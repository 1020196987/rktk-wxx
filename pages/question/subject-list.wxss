.weui-panel {
  margin-top: 0;
}

.weui-media-box__thumb {
  background-color: #fcea88;
  border-radius: 2px;
  color: #be3b22;
  overflow: hidden;
}

.weui-media-box__thumb text {
  display: block;
}

.weui-media-box__thumb text.d1 {
  font-size: 18px;
  padding-top: 9px;
  padding-bottom: 1px;
  line-height: 1.3;
}

.weui-media-box__thumb text.d2 {
  background-color: rgba(190, 59, 34, 0.7);
  color: #fff;
  width: 75%;
  margin: 0 auto;
  border-radius: 99px;
  line-height: 1.5;
  font-size: 10px;
}

.weui-media-box__thumb.t2 {
  background-color: #afefb7;
  color: #345f4b;
}

.weui-media-box__thumb.t2 text.d2 {
  background-color: rgba(52, 95, 75, 0.7);
}

.weui-media-box__thumb.t3 {
  background-color: #ffd09c;
  color: #aa0101;
}

.weui-media-box__thumb.t3 text.d2 {
  background-color: rgba(170, 1, 1, 0.7);
}
