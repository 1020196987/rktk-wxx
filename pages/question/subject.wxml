<view class="page">
  <view class="page__hd">
    <view class="top-block">
      <view class="subtitle">{{parent_name}}</view>
      <view class="title">{{subject_name}}</view>
      <view class="subtitle infos">
        题数 {{question_num}}
        <text>/</text> 满分 {{question_scope}}
        <text>/</text> 通过率 0.0%
        <text>/</text>
        <block wx:if="{{coin > 0}}"> {{coin}}学豆</block>
        <block wx:if="{{coin <= 0}}">免费</block>
      </view>
    </view>
  </view>

  <view class="page__bd">
    <view style="color:#777;margin:14px 0;font-size:15px">
      {{description}}
    </view>
  </view>

  <view class="fix-foobar">
    <view class="pull-left">
      <button class="weui-btn" type="primary" bindtap="toExplain">考题解析</button>
    </view>
    <view class="pull-left">
      <form bindsubmit="toExam" report-submit="true">
        <button class="weui-btn split" type="primary" formType="submit">开始答题</button>
      </form>
    </view>
  </view>
</view>

<view class="float-btns" style="bottom:51px">
  <button class="zbtn" bindtap="shareboxOpen">
    <image src="../../images/share.png" class="share"></image>
  </button>
</view>

<import src="../comps/z-sharebox.wxml"/>
<template is="z-sharebox" data="{{...shareboxData}}"/>