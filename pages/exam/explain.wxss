page, .page {
  background-color: #fff;
}

.question {
  margin: 14px 0;
  line-height: 1.7;
  font-size: 15px;
}

.answer-list .item {
  background-color: #fff;
  margin-bottom: 11px;
  font-size: 14px;
  line-height: 1.5;
  border: 1px solid #eee;
}

.answer-list .item .key {
  float: left;
  width: 32px;
  text-align: center;
  padding: 9px 0;
}

.answer-list .item .text {
  padding: 9px 9px;
  margin-left: 32px;
  border-left: 1px solid #eee;
  background-color: #fff;
}

.answer-list .item.selected {
  background-color: #d9534f;
  border-color: #d9534f;
}

.answer-list .item.selected .key {
  color: #fff;
}

.answer-list .item.selected .text {
  border-color: #d9534f;
}

.answer-list .item.right {
  background-color: #4cae4c;
  border-color: #4cae4c;
}

.answer-list .item.right .key {
  color: #fff;
}

.answer-list .item.right .text {
  border-color: #4cae4c;
}

.answer-list .split-line {
  border-top: 1px dotted #eee;
  margin: 14px 0;
}

.answerkeys {
  padding: 11px 0;
  background-color: #eee;
}

.answerkeys .pull-left {
  width: 50%;
  color: #777;
  text-align: center;
}

.answerkeys .pull-left text {
  color: #000;
  margin-left: 3px;
}

.explain-title {
  font-size: 17px;
  margin-top: 14px;
}

.explain-content {
  color: #555;
  line-height: 1.7;
  font-size: 15px;
}

.fbtns {
  bottom: 48px;
  right: 14px;
  position: fixed;
}

.fbtns .bbtn {
  border: 1px solid #4b8ef9;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
  font-size: 14px;
  padding: 0;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 9px;
}

.fbtns .bbtn:active {
  background-color: #eee;
}

.fbtns .bbtn image {
  width: 36px;
  height: 36px;
  margin-top: 3px;
}