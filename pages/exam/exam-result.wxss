@import "../comps/z-sharebox.wxss";

.circle, .circle-scope {
  width: 100px;
  height: 100px;
  z-index: 1;
}

.circle {
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  text-align: left;
}

.circle-scope {
  position: absolute;
  color: #d9534f;
  font-size: 42px;
  text-align: center;
  line-height: 100px;
  margin-left: -4px;
  transform: translate(7px, 0);
}

.circle-scope text {
  font-size: 13px;
  color: #999;
  display: inline-block;
  margin-left: -9px;
  transform: translate(0, -2px);
}

.circle-scope.pass {
  color: #4cae4c;
}

.seqs {
  padding: 18px;
  text-align: center;
}

.seqs .item {
  width: 38px;
  height: 38px;
  line-height: 38px;
  color: #fff;
  border-radius: 50%;
  margin: 5px 6px;
  font-size: 18px;
  text-align: center;
  background-color: #d9534f;
  display: inline-block;
}

.seqs .item.right {
  background-color: #4cae4c;
}

.page.has-foobar {
  padding-bottom: 43px;
}

.pkimg-show {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  text-align: center;
}

.pkimg-show image {
  width: 300px;
  height: 480px;
  margin-top: 18px;
  border-radius: 6px;
}

.pkimg-show text {
  color: #fff;
  font-size: 14px;
  display: block;
  margin-top: 6px;
}

.pkimg-show icon {
  position: fixed;
  bottom: 18px;
  text-align: center;
  left: 50%;
  margin-left: -21px;
}