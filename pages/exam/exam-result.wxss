.circle, .circle-scope {
  width: 100px;
  height: 100px;
}

.circle {
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  text-align: left;
}

.circle-scope {
  position: absolute;
  color: #d9534f;
  font-size: 42px;
  text-align: center;
  line-height: 100px;
}

.circle-scope.pass {
  color: #4cae4c;
}

.seqs {
  padding: 18px;
  text-align: center;
}

.seqs .item {
  width: 38px;
  height: 38px;
  line-height: 38px;
  color: #fff;
  border-radius: 50%;
  margin: 5px 6px;
  font-size: 18px;
  text-align: center;
  background-color: #d9534f;
  display: inline-block;
}

.seqs .item.right {
  background-color: #4cae4c;
}
