.user-block {
  padding: 12px 14px;
  background-color: #fff;
}

.user-block .headimg {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
}

.user-block .headimg image {
  width: 100%;
  height: 100%;
}

.user-block .nick {
  color: #000;
  font-size: 16px;
  margin-left: 12px;
  padding-top: 9px;
  line-height: 1.4;
}
.user-block .nick text {
  font-size: 11px;
  border: 1px solid #bbb;
  border-radius: 99px;
  padding: 1px 9px;
  color: #aaa;
  font-style: italic;
}

.user-block .subject {
  margin-top: 16px;
  color: #ec5353;
  border: 1px solid #ec5353;
  border-radius: 99px;
  padding: 2px 9px;
  font-size: 12px;
}

.weui-cells {
  margin-top: 15px;
}