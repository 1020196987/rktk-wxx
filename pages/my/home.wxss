.user-block {
  padding: 14px;
  background-color: #fff;
  border-bottom: 1rpx solid #d9d9d9;
  position: relative;
}

.user-block .headimg {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
}

.user-block .headimg image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-block .nick {
  font-size: 16px;
  margin-left: 9px;
  padding-top: 11px;
  line-height: 1.2;
}

.user-block .nick navigator {
  font-size: 13px;
  color: #999;
  display: inline-block;
  margin-top: 1px;
}

.tags {
  position: absolute;
  right: 14px;
  top: 10px;
}

.tags text {
  font-size: 11px;
  border: 1px solid #aaa;
  padding: 2px 5px;
  color: #555;
  display: inline-block;
  line-height: 1;
  border-radius: 99px;
  margin-left: 3px;
}

.weui-cells {
  margin-top: 15px;
}

.rktk .weui-cell__hd image {
  width: 18px;
  height: 18px;
  position: absolute;
  top: 13px;
}

.rktk .weui-cell__bd {
  margin-left: 27px;
}

.vip {
  background-color: #a18d62;
  color: #fff;
  border-color: #a18d62;
}

.vip .tags text {
  border-color: #fff;
  background-color: #fff;
  color: #a18d62;
}

.vip .nick navigator {
  color: rgba(0, 0, 0, 0.3);
}

.vip .nick navigator:after {
  border-color: rgba(0, 0, 0, 0.3);
}
