<view class="page">
  <view class="page__hd">
    <view class="user-block">
      <view class="pull-left headimg">
        <image src="{{headimgUrl}}"></image>
      </view>
      <view class="pull-left nick">
        <view>{{nick}}</view>
        <text class="level">{{level}}</text>
        <text class="coin">学豆 {{coin}}</text>
      </view>
      <view class="pull-right subject">
        <navigator url="../question/subject-choice?back=1">
          {{subject}}
          <image src="../../images/arrow-right-nl-32.png"></image>
        </navigator>
      </view>
      <view class="clearfix"></view>
    </view>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <navigator url="my-exams" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">答题记录</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="incorrects" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">错题本</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="my-favs" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">我的收藏</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <navigator url="coin-records" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">学豆记录</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="coin-buy" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">学豆充值</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>

  <view class="weui-cells weui-cells_after-title">
    <navigator url="../index/h5?url=m%2ffaq.htm%3fuser%3d{{user}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">常见问题</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="../index/h5?url=m%2ffeedback.htm%3fuser%3d{{user}}" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">问题反馈</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="../index/h5?url=m%2frights.htm" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">免责声明</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
</view>