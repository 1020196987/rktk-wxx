@import "libs/weui.wxss";

page, .page {
  background-color: #f7f7f9;
  font-size: 14px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__bd {
  margin: 0 14px;
  padding: 0;
}

.page__hd {
  margin: 0;
  padding: 0;
}

.navigator-hover {
  background-color: transparent;
}

.pull-left {
  float: left;
}

.pull-right {
  float: right;
}

.clearfix {
  clear: both;
  font-size: 0;
  height: 0;
  line-height: 0;
}

.hide {
  display: none !important;
}

.base-hover {
  opacity: 0.8;
}

.top-block {
  padding: 24px 14px;
  background-color: #fff;
  border-bottom: 1rpx solid #d9d9d9;
  text-align: center;
}

.top-block view.title {
  font-size: 21px;
  color: #222;
}

.top-block view.subtitle {
  font-size: 14;
  color: #999;
}

.top-block view.subtitle.infos {
  color: #666;
  margin-top: 3px;
}

.top-block view.subtitle.infos text {
  color: #cecece;
  margin: 0 3px;
}

.fix-foobar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
}

.fix-foobar.btns {
  border-top: 1rpx solid #d9d9d9;
  margin: 0;
}

.fix-foobar.btns button {
  border-radius: 0;
  background-color: #fff;
}

.fix-foobar button {
  font-size: 17px;
}

.float-btns {
  bottom: 14px;
  right: 14px;
  position: fixed;
}

.float-btns .zbtn {
  border: 1rpx solid #4b8ef9;
  width: 44px;
  height: 44px;
  border-radius: 50%;
  text-align: center;
  margin: 0 auto;
  font-size: 14px;
  padding: 0;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 9px;
}

.float-btns .zbtn:active {
  background-color: #eee;
}

.float-btns .zbtn image {
  width: 36px;
  height: 36px;
  margin-top: 3px;
}

.float-btns .zbtn image.share {
  margin-top: 8px;
  width: 26px;
  height: 26px;
}

.float-btns .zbtn image.fav {
  margin-top: 6px;
  width: 28px;
  height: 28px;
}

button, button::after, .weui-btn {
  border: 0 none;
  border-radius: 2px;
}

button[type="primary"] {
  background-color: #4b8ef9;
}

.button-hover[type="primary"] {
  background-color: #4b8ef9;
  opacity: 0.8;
}

button[type="default"] {
  color: #000;
  background-color: #fff;
}

button.T2 {
  background-color: #ec5353;
}

button.T2.button-hover {
  background-color: #ec5353;
  opacity: 0.8;
}

.weui-cell {
  padding: 10px 14px;
}

.icon-box {
  margin-top: 40%;
  text-align: center;
}

.icon-box__title {
  font-size: 18px;
  margin-top: 14px;
  color: #333;
}

.icon-box__desc {
  margin: 6px auto;
  font-size: 15px;
  color: #777;
  width: 88%;
}

.weui-navbar__item.weui-bar__item_on {
  color: #ec5353;
}

.weui-navbar__slider {
  background-color: #ec5353;
}

image.x36 {
  width: 36px;
  height: 36px;
}

image.x34 {
  width: 34px;
  height: 34px;
}

image.x32 {
  width: 32px;
  height: 32px;
}

image.x30 {
  width: 30px;
  height: 30px;
}

image.x28 {
  width: 28px;
  height: 28px;
}

image.x26 {
  width: 26px;
  height: 26px;
}

image.x24 {
  width: 24px;
  height: 24px;
}

.weui-panel__hd {
  padding: 14px 14px 10px;
}

.weui-media-box {
  padding: 14px;
}

.weui-media-box.rktk-record .weui-media-box__info {
  margin-top: 7px;
  color: #888;
}

.weui-media-box.rktk-record .weui-media-box__info text {
  color: #444;
}

.weui-media-box.rktk-record .weui-media-box__title.has-btn-more {
  padding-right: 15px;
}

.weui-media-box.rktk-record .btn-more {
  position: absolute;
  right: 0;
  top: 1px;
  background-color: #fff;
  width: 30px;
  height: 28px;
  text-align: center;
  padding-top: 15px;
}

.weui-media-box.rktk-record .btn-more image {
  width: 20px;
  height: 20px;
}

.color-base1 {
  color: #4b8ef9 !important;
}

.color-base2 {
  color: #ec5353 !important;
}

.color-link {
  color: #586c94;
}

.tipsbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 60px;
  text-align: center;
}

.tipsbar view {
  background-color: rgba(0, 0, 0, 0.6);
  color: #fff;
  padding: 9px 18px;
  font-size: 14px;
  display: inline-block;
  border-radius: 6px;
  min-width: 80px;
  max-width: 80%;
}

.fs-14 {
  font-size: 14px;
}

.fs-16 {
  font-size: 16px;
}

.fs-18 {
  font-size: 18px;
}
